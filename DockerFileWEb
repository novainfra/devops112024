FROM debian:11-slim
LABEL maintainer="Israel Viana israel@novainfra.com.br"
ENV PORT=80
RUN apt update && apt install vim net-tools apache2 php php7.4-mysql -y && a2enmod php7.4
# Remova o arquivo index.html padr√£o
RUN rm -f /var/www/html/index.html
COPY ./web/ /var/www/html
EXPOSE $PORT
WORKDIR /etc/apache2
CMD ["apachectl", "-D", "FOREGROUND"]

